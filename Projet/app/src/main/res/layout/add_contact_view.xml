<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contact_firstname_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrez votre prénom :" />

    <EditText
        android:id="@+id/contact_firstname_input"
        android:layout_width="match_parent"
        android:maxWidth="488dp"
        android:layout_height="50dp"
        android:hint="André"
        android:layout_below="@id/contact_firstname_desc"
        android:layout_marginBottom="155dp"
        tools:layout_editor_absoluteX="255dp"
        android:autofillHints="" />

    <TextView
        android:id="@+id/contact_lastname_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_firstname_input"
        android:text="Entrez votre nom :" />

    <EditText
        android:id="@+id/contact_lastname_input"
        android:layout_width="match_parent"
        android:maxWidth="488dp"
        android:layout_height="50dp"
        android:hint="Dupont"
        android:layout_below="@id/contact_lastname_desc"
        android:layout_marginBottom="155dp"
        tools:layout_editor_absoluteX="255dp"
        android:autofillHints="" />

    <Button
        android:id="@+id/contact_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_lastname_input"
        android:layout_marginTop="160dp"
        android:layout_marginStart="150dp"
        android:text="Valider" />

</RelativeLayout>